<%= form_for(@portfolio_items) do |form| %>
  <div class="container">
    <div class="row">

      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :subtitle %>
          <%= form.text_field :subtitle, class: 'form-control' %>
        </div>
      </div>

      <div class = "col-md-6">
        <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body, class: 'form-control', rows: 8 %>
        </div>
      </div>

    </div>
  </div>

  <hr>

  <div class = "col-md-12">
    <h3> Technologies Used: </h3>
    <div>
      <%= form.fields_for :technologies do |item| %>
      <div class="form-group">
        <%= item.label :name %>
        <%= item.text_field :name, class: 'form-control' %>
      </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.submit 'Save', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
